default: &default
  adapter: <%= node['rails']['database']['adapter'] %>
  encoding: <%= node['rails']['database']['encoding'] %>
  pool: <%= node['rails']['database']['pool'] %>

development:
  <<: *default
  database: app_development

test:
  <<: *default
  database: app_test

production:
  <<: *default
  database: <%= node['rails']['database']['name'] %>
  username: <%= node['rails']['database']['user'] %>
  host: <%= node['rails']['database']['host'] %>
  port: <%= node['rails']['database']['port'] %>
  password: <%= node['rails']['rails_database_password'] %>
