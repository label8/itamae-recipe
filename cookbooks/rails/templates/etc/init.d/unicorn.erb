#!/bin/sh

### BEGIN INIT INFO
# Provides:          unicorn
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts unicorn (a rails app)
# Description:       starts unicorn (a rails app) using start-stop-daemon
### END INIT INFO

USER=<%= node['rails']['unicorn']['user'] %>
APP_ROOT=<%= node['rails']['app_root'] %>
RAILS_ENV=<%= node['rails']['env'] %>
PID_FILE=<%= node['rails']['unicorn']['pid_file'] %>
CONFIG_FILE=<%= node['rails']['unicorn']['config_file'] %>
CMD="<%= node['rbenv']['dirs']['root'] %>/shims/bundle exec <%= node['rails']['vendor_bin_path'] %>/unicorn"
ARGS="-c $CONFIG_FILE -D -E $RAILS_ENV"

. /etc/profile.d/rbenv.sh

case $1 in
  start)
    start-stop-daemon --start --chuid $USER --chdir $APP_ROOT --exec $CMD -- $ARGS || true
    ;;

  stop)
    start-stop-daemon --stop --signal QUIT --pidfile $PID_FILE || true
    ;;

  restart|force-reload)
    start-stop-daemon --stop --signal USR2 --pidfile $PID_FILE || true
    ;;

  status)
    status_of_proc -p $PID_FILE "$CMD" unicorn && exit 8 || exit $?
    ;;

  *)
    echo >&2 "Usage: $0 [start|stop|restart|force-reload|status]"
    exit 1
    ;;
esac
