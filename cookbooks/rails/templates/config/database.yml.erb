default: &default
  adapter: <%= node['rails']['database']['adapter'] %>
  encoding: <%= node['rails']['database']['encoding'] %>
  pool: <%= node['rails']['database']['pool'] %>
  username: <%= node['pgsql']['user'] %>
  host: <%= node['pgsql']['server_names'][0] %>
  port: <%= node['pgsql']['port'] %>
  password: <%= node['rails']['rails_database_password'] %>

development:
  <<: *default
  database: <%= node['pgsql']['db_name'] %>_development

test:
  <<: *default
  database: <%= node['pgsql']['db_name'] %>_test

production:
  <<: *default
  database: <%= node['pgsql']['db_name'] %>_production